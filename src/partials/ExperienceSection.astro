---
import ExperienceItem from "@/components/ExperienceItem.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import BriefcaseIcon from "@/components/icons/BriefcaseIcon.astro";

const experiences = [
  {
    name: "Ministerio de Medio Ambiente",
    position: "Programador Web",
    url: "https://www.ambiente.gob.sv/",
    startDate: "2022-01-01",
    endDate: null,
    summary:
      "Como Desarrollador de aplicaciones web en la Dirección de Ecosistemas y Biodiversidad en el Ministerio de Medio Ambiente de El Salvador, contribuí a la optimización de procesos internos y mejoré la eficiencia en la respuesta a requerimientos a través de la implementación de formularios, dashboards y mapas interactivos. Desarrollé la API para el sistema de reservas de las Áreas Naturales Protegidas. Actualmente, estoy desarrollando un portal dedicado a la gestión de la biodiversidad y la conservación de territorios.",
    highlights: ["Started the company"],
  },
];
---

<SectionContainer {...Astro.props}>
  <h2 class="text-2xl font-semibold mb-4 flex gap-x-2 items-center">
    <BriefcaseIcon class="size-8" />Experiencia laboral
  </h2>
  <ol
    class="relative border-s border-gray-200 dark:border-gray-700 bg-gray-500/5 rounded-lg pt-6 pb-0.5"
  >
    {experiences.map((experience) => <ExperienceItem {...experience} />)}
  </ol>
</SectionContainer>
